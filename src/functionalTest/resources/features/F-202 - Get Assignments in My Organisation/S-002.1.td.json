						},
						{
							"idam_id": "[[ANYTHING_PRESENT]]",
							"first_name": "Bill",
							"last_name": "Solicington",
							"email": "befta.master.solicitor.bill@gmail.com",
							"case_roles": [
								"[Claimant]",
								"[Defendant]"
							]
						},
						{
							"idam_id": "[[ANYTHING_PRESENT]]",
							"first_name": "Becky",
							"last_name": "Solicington",
							"email": "befta.master.solicitor.becky@gmail.com",
							"case_roles": [
								"[CREATOR]"
							]
						}
					]
