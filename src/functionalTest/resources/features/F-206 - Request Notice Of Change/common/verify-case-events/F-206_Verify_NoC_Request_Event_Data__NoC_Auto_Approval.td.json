{
  "_guid_": "F-206_Verify_NoC_Request_Event_Data__NoC_Auto_Approval",
  "_extends_": "F-206_Verify_NoC_Request_Event_Data__Base",

  "specs": [
    "to get Case Events API returns a NoCRequest event in which the user ID is set to invoking users email address AND the proxied_by field set to the ID of the system user"
  ],

  "users": {
    "invokingUser": {
      "_extends_": "ACA_Users_Richard"
    },
    "systemUser": {
      "_extends_": "ACA_Users_Caseworker_CAA"
    }
  },

  "expectedResponse": {
    "body" : {
      "auditEvents": [
        {
          "_extends_": "Base_Audit_Event",
          "event_name": "Apply NoC Decision"
        }, {
          "_extends_": "Base_Audit_Event",
          "user_id": "${[scenarioContext][parentContext][testData][users][invokingUser][id]}",
          "event_name": "NoC Request",
          "proxied_by": "${[scenarioContext][testData][users][systemUser][id]}"
        }, {
          "_extends_": "Base_Audit_Event"
        }
      ]
    }
  }
}
